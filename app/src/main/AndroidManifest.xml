<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="c.verbswithexample.broadcastreceiverp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".SecondReceiver" >

            <intent-filter>

                <action android:name="my.custome.first.receiver" />

            </intent-filter>

        </receiver>


        <receiver android:name=".MyFirstReceiver">

            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE" />

            </intent-filter>
        </receiver>
        <receiver android:name=".MainActivity$MyThirdReceiverInnerClass">
        <intent-filter>

            <action android:name="my.third.receiver" />
        </intent-filter>

        </receiver>

    </application>

</manifest>